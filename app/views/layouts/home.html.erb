<div id="search_form" class="container">
  <div class="col-sm-1"></div>
  <div class="col-sm-10" class="center">
    <div id="page_header_and_search_form" class="center container-fluid">
      <div id="website_header_line" class="row">
        <h2><p class="text-primary">Helping you for everything that makes your life easier</p></h2>
      </div><hr>
      <div id="search_form" class="row center" >
        <%= form_tag("/search") do %>
          <select name="expertise" class="selectpicker" data-width:"100%" data-live-search="true">
            <option selected="selected">Select type of service</option>
            <%= Worker.expertise_options.each do |option_pair| %>
              <option value=<%= option_pair[1] %> > <%= option_pair[0] %> </option> 
            <% end %>
          </select>
          <%= submit_tag "Find helper", class:"btn btn-success find_helper_button" %>
        <% end %>
      </div>

    </div>
  </div>
  <div class="col-sm-1"></div>
</div>
