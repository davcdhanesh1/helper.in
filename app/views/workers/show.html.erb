<div id="worker_profile" class="container">
  <div class="col-sm-1"></div>

  <div class="col-sm-10">
    <div class="container">

      <div id="worker_profile_picture" class="col-sm-4 center">
        <%= image_tag @worker.profile_picture.url(:medium), class: "center" %>
      </div>

      <div id="worker_profile" class="col-sm-6">
        <div id="important_details">
          <div class="row center table_heading">
            <b><%=label_tag :important_details, "Important details", class:"info" %></b>
          </div>
          <table class="table table-striped table-responsive">
            <tbody>
            <tr>
              <td><b>Name:</b></td>
              <td><%= @worker.firstname + " " + @worker.sirname %> </td>
            </tr>
            <tr>
              <td><b>expertise:</b></td>
              <td><b><%= @worker.expertise %></b></td>
            </tr> 
            <tr>
              <td><b>Contact number:</b></td>
              <td><b><%= @worker.contact_information.contact_number %></b></td>
            </tr>
            <tr>
              <td><b>Work history:</b></td>
              <td><%= @worker.work_background %></td>
            </tr>
            <tr>
              <td><b>Address:</b></td>
              <td><%= worker_address(@worker) %> </td>
            </tr>
            </tbody>
          </table>
        </div>

        <div id="personal_information">
          <div class="row center table_heading">
            <b><%=label_tag :personal_information, "Personal information", class: "center" %></td></b>
          </div>
          <table class="table table-striped table-responsive">
            <tbody>
            <tr>
              <td><b>Age:</b></td>
              <td><%= @worker.age %></td>
            </tr>
            <tr>
              <td><b>Education:</b></td>
              <td><%= @worker.educational_background %></td>
            </tr>
            <tr>
              <td><b>Native city:</b></td>
              <td><%= @worker.native_city %></td>
            </tr>
            <tr>
              <td><b>Email:</b></td>
              <td><%= @worker.contact_information.email %> </td>
            </tr>
            </tbody>
          </table>
        </div>

        <% if logged_in? %>
          <div id="verfication_document">
            <div class="row center table_heading">
              <b><%=label_tag :verification_document, "Verification document", class: "center" %></td></b>
            </div>
            <div id="verification_document_picture" class="center">
                <%= image_tag @worker.verification_document.picture.url(:medium), class: "center" %>
            </div>
          </div>
        <% end %>

      </div>

    </div>
  </div>

  <div class="col-sm-1"></div>
</div>
